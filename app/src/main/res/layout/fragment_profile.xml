<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/back_color"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".pages.ProfileFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:fillViewport="true"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/page"
                android:layout_width="match_parent"
                 android:visibility="gone"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/gradient_profile"
                    android:layout_width="140dp"
                    android:layout_height="300dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:padding="20dp"
                        >
                        <ImageView

                            android:src="@drawable/arrow_left"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:visibility="gone"
                            app:tint="?attr/text_color"
                            />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="match_parent"/>
                        <ImageView
                            android:id="@+id/settings"
                            android:src="@drawable/setting"
                            android:layout_width="30dp"
                            android:layout_gravity="right"

                            android:layout_height="30dp"
                            app:tint="?attr/text_color"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layoutDirection="ltr"
                        android:textDirection="ltr"
                        android:layout_height="200dp">
                        <ImageView
                            android:id="@+id/user_image_p"
                            android:src="@drawable/default_user"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:scaleType="centerCrop"
                            android:layout_height="200dp"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:gravity="center_horizontal"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                 android:gravity="center_horizontal"
                                android:layout_gravity="center_horizontal"
                                android:layout_height="50dp">
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_height="30dp"
                                    android:src="@drawable/heart"
                                    app:tint="#f81e70"
                                    />
                                <TextView
                                    android:maxLines="1"
                                    android:text=" 20.3k"
                                    android:textColor="?attr/text_color"
                                    android:id="@+id/followers_tv"
                                    android:gravity="center_vertical"
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="20dp"
                                    android:textAlignment="center"
                                    tools:ignore="RtlCompat"
                                    android:textSize="14dp"

                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:gravity="center_horizontal"
                                android:layout_gravity="center_horizontal"

                                android:layout_height="50dp">
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_height="30dp"
                                    android:src="@drawable/gift"
                                    app:tint="#f81e70"
                                    />
                                <TextView
                                    android:maxLines="1"
                                    android:text=" 20.3k"
                                    android:textColor="?attr/text_color"
                                    android:id="@+id/gift_tv"

                                    android:textSize="14dp"
                                    android:gravity="center_vertical"
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="20dp"
                                    android:textAlignment="center"
                                    tools:ignore="RtlCompat"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:gravity="center_horizontal"
                                android:layout_gravity="center_horizontal"

                                android:layout_height="50dp">
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_height="30dp"
                                    android:src="@drawable/email"
                                    app:tint="#f81e70"
                                    />
                                <TextView
                                    android:id="@+id/messages_tv"
                                    android:maxLines="1"
                                    android:text=" 20.3k"
                                    android:textColor="?attr/text_color"
                                    android:gravity="center_vertical"
                                    android:layout_gravity="center_vertical"

                                    android:textSize="14dp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="20dp"
                                    android:textAlignment="center"
                                    tools:ignore="RtlCompat" />
                            </LinearLayout>
                            <RelativeLayout
                                android:id="@+id/btn_edit"
                                android:layout_width="40dp"
                                android:gravity="center_horizontal"
                                android:layout_gravity="center_horizontal"

                                android:background="@drawable/circleblue"
                                android:layout_height="40dp">
                                <ImageView
                                    android:src="@drawable/edit"
                                    android:layout_width="25dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:layout_height="25dp"/>
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="35dp"
                        android:padding="15dp"
                        android:orientation="vertical"
                        android:layoutDirection="ltr"
                        android:textDirection="ltr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/user_name_tv"
                            android:text="User Name"
                            android:textSize="24dp"
                            android:textStyle="bold"
                            android:textColor="?attr/text_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:gravity="center_vertical"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/location_tv"
                                android:drawableLeft="@drawable/location"
                                android:layout_width="wrap_content"
                                android:drawableTint="?attr/text_color"
                                android:text=" Syria"
                                android:gravity="center_vertical"
                                android:textColor="?attr/text_color"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/email_tv"
                                android:drawableLeft="@drawable/email"
                                android:layout_width="wrap_content"
                                android:drawableTint="?attr/text_color"
                                android:text=" syria@gmail.com"
                                android:layout_marginLeft="20dp"
                                android:gravity="center_vertical"
                                android:textColor="?attr/text_color"
                                android:layout_height="wrap_content"/>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                  android:layout_height="wrap_content">
                                <ImageView
                                    android:background="@drawable/icon_coin"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"/>
                                <TextView
                                    android:id="@+id/coins_ber"
                                    android:layout_width="wrap_content"
                                    android:text=" 30 coin/minute"
                                    android:textSize="14dp"
                                    android:gravity="center_vertical"
                                    android:textColor="?attr/text_color"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:padding="15dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="@string/short_bio"
                            android:textSize="24dp"
                            android:textStyle="bold"
                            android:textColor="?attr/text_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="Short Bio"
                            android:id="@+id/status_tv"
                            android:textColor="?attr/text_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tab_layout"
                        android:background="?attr/back_color"
                        android:layout_width="match_parent"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        app:tabTextAppearance="@style/MineCustomTabText2"
                        app:tabMode="scrollable"
                        app:tabTextColor="?attr/text_color"
                        app:tabSelectedTextColor="@color/app_dark_primary"
                        app:tabIndicatorColor="@color/app_dark_primary"
                        android:layout_height="wrap_content">
                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/images"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/images"
                        />
                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:id="@+id/videos"
                        android:layout_height="wrap_content"
                        android:text="@string/videos"
                        /></com.google.android.material.tabs.TabLayout>






                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:id="@+id/rv_images"
                        android:layout_marginBottom="20dp"
                        android:visibility="gone"
                        android:layout_height="100dp"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/video_rv"
                        android:layout_marginBottom="20dp"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="110dp"/>
                    <ProgressBar
                        android:id="@+id/progress"
                        android:padding="15dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/gifts_tv"
                        android:text="@string/gifts"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:textColor="?attr/text_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/gifts_rv"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="20dp"
                        android:layout_height="match_parent"/>
                    <ProgressBar
                        android:id="@+id/progress_gifts"
                        android:padding="15dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/user_id_tv"
                        android:layout_width="match_parent"
                        android:text="ID : 12"
                        android:textSize="18dp"
                        android:textAlignment="center"

                        android:textStyle="bold"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="25dp"
                        android:textColor="?attr/text_color"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>

        <ProgressBar
            android:id="@+id/progress_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>


</FrameLayout>