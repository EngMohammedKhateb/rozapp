<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/back_color"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".auth.ConfirmPasswordActivity">
<LinearLayout
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <rozapp.roz.app.helper.EnglishLanguage
        android:textSize="28dp"
        android:textAlignment="center"
        android:textColor="?attr/text_color"
        android:text="Verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <rozapp.roz.app.helper.EnglishLanguage
        android:textSize="18dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textColor="?attr/text_color"
        android:layout_gravity="center"
        android:text="please enter the 4-digit code\ncent to your email"
        android:layout_width="310dp"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/first_ed"
            android:background="@drawable/ed_bordered"
            android:layout_width="60dp"
            android:maxLength="1"
            android:maxLines="1"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_height="60dp"/>
        <EditText
            android:id="@+id/sec_ed"
            android:background="@drawable/ed_bordered"
            android:layout_width="60dp"
            android:maxLength="1"
            android:maxLines="1"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_height="60dp"/>
        <EditText
            android:id="@+id/third_ed"
            android:background="@drawable/ed_bordered"
            android:layout_width="60dp"
            android:maxLength="1"
            android:maxLines="1"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_height="60dp"/>
        <EditText
            android:id="@+id/four_ed"
            android:background="@drawable/ed_bordered"
            android:layout_width="60dp"
            android:maxLength="1"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:maxLines="1"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_height="60dp"/>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/btn_login"
        android:layout_gravity="center_horizontal"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/roundedv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Submit"
            android:id="@+id/tv_login"
            android:textColor="#fff"
            android:textSize="20dp" />
        <ProgressBar
            android:id="@+id/progress_login"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:indeterminateTint="#fff"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <TextView
        android:textSize="16dp"
        android:layout_marginTop="20dp"
        android:text="Resend OTP"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="?attr/text_color"
        android:id="@+id/resend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>





</LinearLayout>