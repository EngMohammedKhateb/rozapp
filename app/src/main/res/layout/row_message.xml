<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/row_friend_msg"
        android:orientation="vertical"
        android:minWidth="250dp"
        android:layoutDirection="ltr"
        android:layout_margin="15dp"
        android:textDirection="ltr"
        android:layout_gravity="left"
        android:background="@drawable/rounded_freind_message"
        android:layout_width="wrap_content"
        android:padding="15dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layoutDirection="ltr"
            android:textDirection="ltr"
            android:layout_gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/friend_name_tv"
                android:layout_width="wrap_content"
                android:maxLines="1"
                android:textSize="16dp"
                android:text="user name"
                android:textColor="?attr/text_color"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:minWidth="20dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/freind_msg_date_tv"
                android:layout_width="wrap_content"
                android:maxLines="1"
                android:text="20 day ago"
                android:textSize="11dp"
                android:textColor="?attr/text_color"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:id="@+id/freind_msg"
            android:layout_width="wrap_content"
            android:text="this is simple msg"
            android:textSize="14dp"
            android:textColor="?attr/text_color"
            android:layout_height="wrap_content"/>


    </LinearLayout>
    <LinearLayout
        android:layout_margin="15dp"
        android:id="@+id/row_my_msg"
        android:padding="15dp"
        android:orientation="vertical"
        android:minWidth="250dp"

        android:background="@drawable/rounded_my_message"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layoutDirection="ltr"
             android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/my_name_tv"
                android:layout_width="wrap_content"
                android:maxLines="1"
                android:textSize="16dp"
                android:text="user name"
                android:textColor="?attr/text_color"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:minWidth="20dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/my_data_tv"
                android:layout_width="wrap_content"
                android:maxLines="1"
                android:text="20 day ago"
                android:textSize="11dp"
                android:textColor="?attr/text_color"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:id="@+id/my_msg_tv"
            android:layout_width="wrap_content"

            android:text="this is simple msg"
            android:textSize="14dp"
            android:textColor="?attr/text_color"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="15dp"
        android:id="@+id/row_my_gift_msg"
        android:padding="15dp"
        android:orientation="vertical"

        android:background="@drawable/rounded_my_message"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/my_gift_image"
            android:layout_width="130dp"
            android:layout_height="130dp"/>
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/icon_coin"
                android:layout_width="15dp"
                android:layout_height="15dp"/>
            <TextView
                android:id="@+id/coins"
                android:text="12 coin"
                android:textColor="?attr/text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="15dp"
        android:id="@+id/row_frien_gift_msg"
        android:padding="15dp"
        android:orientation="vertical"

        android:background="@drawable/rounded_my_message"
        android:layout_width="wrap_content"
        android:layout_gravity="left"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/freind_gift_image"
            android:layout_width="130dp"
            android:layout_height="130dp"/>
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/icon_coin"
                android:layout_width="15dp"
                android:layout_height="15dp"/>
            <TextView
                android:id="@+id/frined_coins"
                android:text="12 coin"
                android:textColor="?attr/text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>