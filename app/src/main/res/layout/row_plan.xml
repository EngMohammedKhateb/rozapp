<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
     android:background="@drawable/plan_gradient"
     android:elevation="5dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/plan_name_tv"
            android:layout_width="match_parent"
            android:text="plan name"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:padding="5dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/icon_coin"
                android:layout_width="20dp"
                android:layout_height="30dp"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/coins_tv"
                android:text="30 coins"
                android:textSize="15dp"
                android:textColor="#fff"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView

            android:layout_marginRight="4dp"
            android:id="@+id/messages_tv"
            android:text="30 messages"
            android:textSize="15dp"
            android:layout_marginTop="8dp"
            android:drawablePadding="5dp"
            android:textColor="#fff"
            android:drawableLeft="@drawable/chatnav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <RelativeLayout
            android:layout_marginTop="5dp"
            android:id="@+id/pay_plan"

            android:background="@drawable/plan_btn"
            android:backgroundTint="#18001f"
            android:layout_gravity="center_horizontal"
            android:layout_width="90dp"
            android:layout_height="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/buy_plan"
                android:textColor="#fff" />

        </RelativeLayout>



        <TextView
            android:layout_marginLeft="5dp"
            android:textColor="#fff"
            android:layout_marginRight="5dp"
            android:id="@+id/price_tv"
            android:text="$ 30 usd"
            android:textSize="18dp"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</RelativeLayout>