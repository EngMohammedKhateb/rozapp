<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".videocall.RequestVideoCall">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:visibility="visible"
        android:id="@+id/android_page"
        android:layout_height="match_parent"
        android:background="?attr/back_color">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/current_user_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="108dp"
            android:src="@drawable/default_user"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.429"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:civ_border_width="3dp"
            app:civ_border_color="?attr/text_color"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/target_user_image"
            android:layout_width="80dp"
            android:scaleType="centerCrop"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="108dp"
            android:src="@drawable/default_user"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.567"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:civ_border_width="3dp"
            app:civ_border_color="?attr/text_color"
          />

        <TextView
            android:id="@+id/target_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:maxLines="1"
            android:text="user name"
            android:textColor="?attr/text_color"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/current_user_image" />

        <TextView
            android:id="@+id/call_status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="incoming call from "
            android:textColor="?attr/text_color"
            android:textSize="15dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/target_name_tv"
            app:layout_constraintVertical_bias="0.048" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/current_user_image"
            app:layout_constraintVertical_bias="0.904">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <RelativeLayout
                android:id="@+id/btn_close"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/circle_red">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/end_call" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />



        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
    <RelativeLayout
        android:id="@+id/web_screen"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <WebView
            android:id="@+id/web_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />




        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"

            android:orientation="vertical"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_chat"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_above="@+id/ineat" />
            <LinearLayout
                android:id="@+id/ineat"

                android:padding="5dp"
                android:layout_margin="10dp"

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
                <RelativeLayout
                    android:id="@+id/end_call_web"
                    android:layout_width="45dp"
                    android:background="@drawable/circle_red"
                    android:layout_height="45dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/end_call" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
                <RelativeLayout
                    android:id="@+id/btn_toggle_chat"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentRight="true"

                    android:background="@drawable/circle_gradeint">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:padding="3dp"
                        android:src="@drawable/chatnav"
                        app:tint="@color/white" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
                <RelativeLayout
                    android:id="@+id/toggle_camera"
                    android:layout_width="45dp"
                    android:background="@drawable/circleblue"
                    android:layout_height="45dp">

                    <ImageView
                        android:id="@+id/as"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/change_camera" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
                <RelativeLayout
                    android:id="@+id/mute"
                    android:layout_width="45dp"
                    android:background="@drawable/circleblue"
                    android:layout_height="45dp">

                    <ImageView
                        android:id="@+id/mic_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/volume_up" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
                <RelativeLayout
                    android:id="@+id/private_call"
                    android:layout_width="45dp"
                    android:background="@drawable/circleblue"
                    android:layout_height="45dp">

                    <ImageView
                        android:id="@+id/video_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/video_on" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
                <RelativeLayout
                    android:id="@+id/btn_attach"
                    android:layout_width="45dp"
                    android:background="@drawable/circle_gradeint"
                    android:layout_height="45dp">

                    <ImageView
                        android:id="@+id/gift_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/azza" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/chat_bar"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"

                android:padding="2dp"
                android:layoutDirection="ltr"
                android:gravity="center"
                android:background="?attr/back_color"
                android:layout_height="wrap_content">


                <EditText
                    android:id="@+id/ed_message"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:maxLines="5"
                    android:background="?attr/back_color"
                    android:hint="Type Message"
                    android:textSize="14dp"
                    android:textColor="?attr/text_color"
                    android:textColorHint="?attr/text_color"
                    android:padding="8dp"
                    android:minHeight="50dp"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="12dp"
                    android:src="@drawable/sendbtn"
                    app:tint="@color/app_dark_secondary"
                    android:id="@+id/send_btn"
                    />
            </LinearLayout>

        </LinearLayout>







    </RelativeLayout>
    <LinearLayout
        android:id="@+id/gift_anim"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/gift_img"
            android:src="@drawable/azza"
            android:layout_width="110dp"
            android:layout_height="110dp"/>
        <TextView
            android:id="@+id/gift_state"
            android:text="your gift sent successfully"
            android:textSize="18dp"
            android:textColor="@color/orange"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/text_coins"
            android:text="30 coin"
            android:textSize="22dp"
            android:textColor="@color/orange"
            android:textStyle="bold"
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>