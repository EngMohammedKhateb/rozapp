<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/back_color"
    tools:context=".users.AllUsersActivity">
    <ImageView
        android:id="@+id/arrow_back"
        android:src="@drawable/arrow_left"
        android:layout_margin="10dp"
        android:layout_width="40dp"

        android:layout_alignParentLeft="true"
        android:layout_height="40dp"
        app:tint="?attr/text_color" />

    <LinearLayout
        android:id="@+id/line"
        android:orientation="horizontal"
        android:background="@drawable/ed_dark_bordered"
        android:layout_below="@+id/arrow_back"
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:layout_height="60dp">
        <EditText
            android:id="@+id/ed_search"
            android:hint="@string/search_for_users"
            android:textColorHint="?attr/text_color"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="?attr/text_color"
            android:background="?attr/back_color"
            android:layout_margin="20dp"
            android:textSize="12dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/btn_search"
            android:layout_gravity="center_vertical"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/search"
            app:tint="?attr/text_color"/>
    </LinearLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/rv_users"

        android:layout_below="@+id/line"
        android:layout_height="match_parent"/>
    <ProgressBar
        android:id="@+id/pp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>